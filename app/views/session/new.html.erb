<div class="form-grid">
  <div class="fields">
    <h1>Login</h1>
    <%= form_tag login_path do %>

      <strong><%= label_tag :email %></strong> <br>
      <%= email_field_tag :email, nil %>
      <br>
      <strong><%= label_tag :password %></strong> <br>
      <%= password_field_tag :password, nil %>
      <br>
      <%= submit_tag 'Login' %>
      <br>

    <% end %>
    <a href="/users/new"><%= button_tag 'Sign Up'%></a>
    <br>

    <% if flash[:error] %>
      <br>
      <strong><%= flash[:error] %></strong>
      <br>
    <% end %>
  </div>
</div>
