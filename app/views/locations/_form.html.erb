<%= form_for @location do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :type %>
  <%= f.text_field :variety %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <%= f.label 'where is it?' %>
  <%= f.collection_select :environment_id, Location.where(:universe => @universe), :id, :name%>
  <br />
  <%= f.label :visible %>
  <%= f.check_box :visible %>
  <br />
  <%= f.hidden_field :universe, :value => @universe %>
  <%= f.hidden_field :branch, :value => @branch%>
  <%= f.submit %>
<% end %>
